@model Nemesys.ViewModels.EditInvestigation

@{
    ViewData["Title"] = "Create Investigation";
}

<h2>Create Investigation</h2>

<form asp-action="CreateInvestigation" method="post" role="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Description" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="col-md-2"></label>
        <div class="col-md-5">
            <select asp-for="Status" class="form-control" id="status" asp-items="ViewBag.status">
                <option value="">Status</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Create Investigation" />
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</form>
